@model EmployeeApp.Models.Employee

@{
    ViewData["Title"] = "Details";
}


<h2 class="text-center">Detail Employee</h2>
<div class="Conteiner mt-3 text-center">
    <div class="form-group col">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input readonly class="form-control-plaintext" asp-for="Name" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Position</label>
            <div class="col-sm-10">
                <input readonly class="form-control-plaintext" asp-for="Position" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Age</label>
            <div class="col-sm-10">
                <input readonly class="form-control-plaintext" asp-for="age" />
            </div>
        </div>
    </div>
    <div class="form-group rowsssss" >
        <a class="btn btn-primary w-50" asp-controller="Employee" asp-action="Index">Back</a>
    </div>
</div>