@model EmployeeApp.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-center">Edit Employee</h2>
<form action="Update" method="post">
    <div class="Conteiner mt-3 text-center">
        <div class="form-group col">
            <input asp-for="Id" hidden />
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Position</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Position" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Age</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="age" />
                    <span asp-validation-for="age" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group rows">
            <Button type="submit" class="btn btn-warning w-30" asp-controller="Employee" asp-action="Update">Save</Button>
            <a class="btn btn-danger w-30" asp-controller="Employee" asp-action="Index">Back</a>
        </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}