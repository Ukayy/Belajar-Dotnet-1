@model IEnumerable<EmployeeApp.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Employee Data</h1>

<p>
    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                No
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.age)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@{ var i = 1;}
@foreach (var item in Model) {
        <tr>
            <td>
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                <a asp-controller="Employee" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-success">Detail</a> 
                <a asp-controller="Employee" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-warning">Edit</a> 
                <a asp-controller="Employee" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a> 
            </td>
        </tr>          
        
{ i++; }
}
    </tbody>
</table>
